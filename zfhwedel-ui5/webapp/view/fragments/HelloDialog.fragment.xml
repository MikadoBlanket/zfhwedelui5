<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
    >
        <content>
            <Text
                id="helloDialogText"
                text="{i18n>helloDialogText}"
                class="sapUiResponsiveMargin"
            />
        </content>
        <beginButton>
            <Button
                id="helloDialogCloseButton"
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>